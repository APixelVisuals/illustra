{
    "compilerOptions": {
        "incremental": true,
        "target": "es2020",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "outDir": "./out",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/",
        "testing/"
    ]
}